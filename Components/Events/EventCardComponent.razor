<div>
    <div class="card">
        <h3 class="mt-2 mx-2">@Id - @Title</h3>
        <p class="mx-2"><strong>Date:</strong> @Date</p>
        <p class="mx-2"><strong>Location:</strong> @Location</p>
        <div class="card-actions mx-1 mb-2">
            <a class="btn btn-primary" href="/event/@Id/details">View Details</a>
        </div>
    </div>
</div>

@code {
    [Parameter] public int? Id { get; set; }
    [Parameter] public string? Title { get; set; }
    [Parameter] public string? Date { get; set; }
    [Parameter] public string? Location { get; set; }
}
